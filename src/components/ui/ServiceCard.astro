---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

interface Props {
    title: string;
    description: string;
    image: string;
    slug: string;
    imageAlt: string;
}

const { title, description, image, slug, imageAlt } = Astro.props;
---

<div class="group overflow-hidden rounded-xl bg-white shadow-md border border-slate-100">
  <div class="aspect-video w-full overflow-hidden">
    <Image 
      src={image} 
      alt={imageAlt} 
      width={400} 
      height={225}
      class="h-full w-full object-cover transition-transform duration-300 lg:group-hover:scale-105"
      transition:name={`image-${slug}`}
    />
  </div>
  <div class="p-5">
    <h3 class="text-xl font-bold text-slate-800 mb-2" transition:name={`title-${slug}`}>{title}</h3>
    <p class="text-slate-600 leading-relaxed">{description}</p>
  </div>
  <a href={`/servicios/${slug}`} class="mb-4 ml-4 inline-flex items-center justify-center gap-2 bg-slate-100 text-slate-700 px-4 py-2.5 rounded-lg font-bold lg:hover:bg-blue-600 lg:hover:text-white transition-all group/btn">Conocer m√°s
    <Icon name="mdi:arrow-right" class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform " />
  </a>
</div>