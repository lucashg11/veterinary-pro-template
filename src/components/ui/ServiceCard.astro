---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    description: string;
    image: any;
    imageAlt: string;
}

const { title, description, image, imageAlt } = Astro.props;
---

<div class="group overflow-hidden rounded-xl bg-white shadow-md border border-slate-100">
  <div class="aspect-video w-full overflow-hidden">
    <Image 
      src={image} 
      alt={imageAlt} 
      width={400} 
      height={225}
      loading="eager"
      class="h-full w-full object-cover transition-transform duration-300 lg:group-hover:scale-105"
    />
  </div>
  <div class="p-5">
    <h3 class="text-xl font-bold text-slate-800 mb-2">{title}</h3>
    <p class="text-slate-600 leading-relaxed">{description}</p>
  </div>
</div>